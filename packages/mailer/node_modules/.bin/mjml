#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/juandav/apps/juandav/mailer/node_modules/.pnpm/mjml@4.15.3/node_modules/mjml/bin/node_modules:/Users/juandav/apps/juandav/mailer/node_modules/.pnpm/mjml@4.15.3/node_modules/mjml/node_modules:/Users/juandav/apps/juandav/mailer/node_modules/.pnpm/mjml@4.15.3/node_modules:/Users/juandav/apps/juandav/mailer/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/juandav/apps/juandav/mailer/node_modules/.pnpm/mjml@4.15.3/node_modules/mjml/bin/node_modules:/Users/juandav/apps/juandav/mailer/node_modules/.pnpm/mjml@4.15.3/node_modules/mjml/node_modules:/Users/juandav/apps/juandav/mailer/node_modules/.pnpm/mjml@4.15.3/node_modules:/Users/juandav/apps/juandav/mailer/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../mjml/bin/mjml" "$@"
else
  exec node  "$basedir/../mjml/bin/mjml" "$@"
fi
